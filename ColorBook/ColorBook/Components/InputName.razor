
<div class="input-name__wrapper">

    <label class="input-name__label">
        <span>Name:</span>
        <input @bind="@ColorName" class="input-name__input" disabled />
    </label>

    <ButtonCopy Text="@ColorName" />

</div>


@code {
    [Parameter]
    public string Value { get; set; }
    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    private string ColorName
    {
        get => Value;
        set => Value = value;
    }
}
